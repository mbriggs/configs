font-family = JetBrains Mono
theme = tokyonight_night
font-size = 16

adjust-cell-width = 0
adjust-cell-height = 15%
macos-titlebar-style = transparent

window-decoration = true
window-theme = dark
macos-non-native-fullscreen = true
shell-integration = detect
shell-integration-features = no-cursor,sudo,title

window-vsync = true
keybind = shift+enter=text:\n
keybind = cmd+f=text:%
macos-option-as-alt = true

keybind = cmd+period=toggle_split_zoom
keybind = cmd+comma=prompt_surface_title

# Unbind Cmd+Shift+P to allow Neovim to use it for quickfix navigation
keybind = cmd+shift+p=unbind

auto-update-channel = tip

# Split navigation with Cmd+Shift+HJKL
keybind = cmd+shift+h=goto_split:left
keybind = cmd+shift+j=goto_split:bottom
keybind = cmd+shift+k=goto_split:top
keybind = cmd+shift+l=goto_split:right
