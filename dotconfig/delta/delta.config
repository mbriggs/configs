# vim: set filetype=gitconfig:

[delta]
  navigate = true
  line-numbers = true
  true-color = always
  hunk-header-style = omit
	file-decoration-style = none
	line-numbers-left-style = "black"
	line-numbers-right-style = "black"
	line-numbers-left-format = "{nm:^4}â”Š"

  ; tokyonight-moon
